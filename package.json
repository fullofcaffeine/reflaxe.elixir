{
  "name": "reflaxe-elixir",
  "version": "0.1.0",
  "description": "Haxe to Elixir compilation target using Reflaxe with Mix integration. Uses npm/lix for Haxe compiler development, mix for Elixir runtime testing.",
  "main": "src/reflaxe/elixir/ElixirCompiler.hx",
  "keywords": [
    "haxe",
    "elixir",
    "beam",
    "phoenix",
    "otp",
    "ecto",
    "liveview",
    "compiler",
    "reflaxe"
  ],
  "author": "Claude Code",
  "license": "GPL-3.0",
  "devDependencies": {
    "lix": "^15.12.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "semantic-release": "^22.0.12"
  },
  "scripts": {
    "postinstall": "lix download",
    "test": "npx haxe test/Test.hxml && MIX_ENV=test mix test --no-deps-check",
    "test:haxe": "npx haxe test/Test.hxml",
    "test:mix": "MIX_ENV=test mix deps.compile && MIX_ENV=test mix test --no-deps-check",
    "test:examples": "for dir in examples/*/; do echo \"Testing $dir\"; if [ -f \"$dir/compile-all.hxml\" ]; then (cd \"$dir\" && npx haxe compile-all.hxml) || exit 1; elif [ -f \"$dir/build.hxml\" ]; then (cd \"$dir\" && npx haxe build.hxml) || exit 1; fi; done",
    "test:update": "npx haxe test/Test.hxml update-intended",
    "clean": "rm -rf out && find test/tests -name 'out' -type d -exec rm -rf {} +",
    "setup": "lix scope create && lix install haxelib:reflaxe"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:fullofcaffeine/reflaxe.elixir.git"
  },
  "release": {
    "branches": ["main"],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "node scripts/sync-version.js ${nextRelease.version}"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "reflaxe-elixir-*.zip",
              "label": "Reflaxe.Elixir v${nextRelease.version}"
            }
          ]
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "package-lock.json",
            "haxelib.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
