package;

/**
 * Phoenix Router for TodoApp using NEW declarative Haxe Router DSL
 * 
 * Demonstrates the new @:routes annotation with auto-generated functions.
 * No manual empty functions needed - everything is generated by RouterBuildMacro.
 */
@:router
@:build(reflaxe.elixir.macros.RouterBuildMacro.generateRoutes())
@:routes([
    {
        name: "root",
        method: "LIVE", 
        path: "/", 
        controller: "TodoLive", 
        action: "index"
    },
    {
        name: "todosIndex",
        method: "LIVE",
        path: "/todos", 
        controller: "TodoLive",
        action: "index"
    },
    {
        name: "todosShow", 
        method: "LIVE",
        path: "/todos/:id",
        controller: "TodoLive",
        action: "show"
    },
    {
        name: "todosEdit",
        method: "LIVE", 
        path: "/todos/:id/edit",
        controller: "TodoLive",
        action: "edit"
    },
    {
        name: "liveDashboard",
        method: "LIVE_DASHBOARD",
        path: "/dev/dashboard"
    }
])
class TodoAppRouterNew {
    // No manual functions needed!
    // RouterBuildMacro.generateRoutes() will auto-generate:
