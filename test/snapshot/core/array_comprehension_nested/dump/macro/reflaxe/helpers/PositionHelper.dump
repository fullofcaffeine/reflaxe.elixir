class reflaxe.helpers.PositionHelper {

	public static function unknownPos() {
		return haxe.macro.Context.makePosition({min : 0, max : 0, file : "(unknown)"});
	}

	public static function getFile(p:haxe.macro.Position) {
		return {
			var this = haxe.macro.PositionTools.toLocation(p).file;
			cast this;
		};
	}

	public static function line(p:haxe.macro.Position) {
		return haxe.macro.PositionTools.toLocation(p).range.start.line;
	}

	public static function column(p:haxe.macro.Position) {
		return haxe.macro.PositionTools.toLocation(p).range.start.character;
	}
}