class reflaxe.elixir.ast.transformers.HeexInlineIfQuoteNormalizeTransforms {

	public static function transformPass(ast:reflaxe.elixir.ast.ElixirAST) {
		return reflaxe.elixir.ast.ElixirASTTransformer.transformNode(ast, function(n:reflaxe.elixir.ast.ElixirAST) {
			return @:ast(switch (n.def) {
	case ESigil(type, content, modifiers) if (type == "H"):
		var updated = normalize(content);
		if (updated != content) makeASTWithMeta(ESigil(type, updated, modifiers), n.metadata, n.pos) else n;	
	default:
		n;	
}) {
				var ` = n.def;
				if (enumIndex ` == 61) {
					var ` = `[0];
					var ` = `[1];
					var ` = `[2];
					{
						var type = `;
						var content = `;
						var modifiers = `;
						if (type == "H") {
							var updated = reflaxe.elixir.ast.transformers.HeexInlineIfQuoteNormalizeTransforms.normalize(content);
							if (updated != content) {
								{def : reflaxe.elixir.ast.ElixirASTDef.ESigil(type, updated, modifiers), metadata : n.metadata, pos : n.pos};
							} else {
								n;
							};
						} else {
							n;
						};
					};
				} else {
					n;
				};
			};
		});
	}

	static function normalize(s:String) {
		var out = new StringBuf();
		var i = 0;
		while (i < s.length) {
			var open = s.indexOf("<%=", i);
			if (open == -1) {
				out.add(s.substr(i, null));
				break;
			};
			out.add(s.substr(i, open - i));
			var close = s.indexOf("%>", open + 3);
			if (close == -1) {
				out.add(s.substr(open, null));
				break;
			};
			var inner = s.substr(open + 3, close - (open + 3));
			var trimmed = StringTools.trim(inner);
			if (StringTools.startsWith(trimmed, "if ") && trimmed.indexOf(", do:", null) != -1) {
				var rebuilt = reflaxe.elixir.ast.transformers.HeexInlineIfQuoteNormalizeTransforms.rebuildInlineIf(trimmed);
				out.add("<%= " + rebuilt + " %>");
			} else {
				out.add(s.substr(open, (close + 2) - open));
			};
			i = close + 2;
		};
		return out.toString();
	}

	static function rebuildInlineIf(inner:String) {
		var buf = new StringBuf();
		var i = 0;
		var inD = false;
		var inS = false;
		while (i < inner.length) {
			var ch = inner.charAt(i);
			if (! inS && ch == "\"" && ! inD) {
				inD = true;
				buf.add(ch);
				i ++;
				continue;
			};
			if (inD && ch == "\"") {
				inD = false;
				buf.add(ch);
				i ++;
				continue;
			};
			if (! inD && ch == "'" && ! inS) {
				inS = true;
				buf.add(ch);
				i ++;
				continue;
			};
			if (inS && ch == "'") {
				inS = false;
				buf.add(ch);
				i ++;
				continue;
			};
			if (inD || inS) {
				if (i + 2 < inner.length && inner.charAt(i) == "\\" && inner.charAt(i + 1) == "\\" && inner.charAt(i + 2) == "\"") {
					buf.add("\\\"");
					i += 3;
					continue;
				};
			};
			buf.add(ch);
			i ++;
		};
		return buf.toString();
	}
}