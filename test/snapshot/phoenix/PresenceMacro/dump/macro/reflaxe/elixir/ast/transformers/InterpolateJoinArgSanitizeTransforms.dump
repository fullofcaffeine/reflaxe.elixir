	static function sanitizeRaw(src:String) {
		var out = new StringBuf();
		var i = 0;
		while (i < src.length) {
			var open = src.indexOf("#{", i);
			if (open == -1) {
				out.add(src.substr(i, null));
				break;
			};
			out.add(src.substr(i, open - i));
			var k = open + 2;
			var depth = 1;
			while (k < src.length && depth > 0) {
				var ch = src.charAt(k);
				if (ch == "{") {
					depth ++;
				} else {
					if (ch == "}") {
						depth --;
					};
				};
				k ++;
			};
			var inner = src.substr(open + 2, (k - 1) - (open + 2));
			var fixed = reflaxe.elixir.ast.transformers.InterpolateJoinArgSanitizeTransforms.fixEnumJoinFirstArg(inner);
			var trimmed = StringTools.trim(fixed);
			var needsIife = (fixed.indexOf("\n", null) != -1) || (fixed.indexOf("=", null) != -1 && fixed.indexOf("==", null) == -1);
			if (needsIife && ! StringTools.startsWith(trimmed, "(fn ->")) {
				fixed = "(fn -> " + fixed + " end).()";
			};
			out.add("#{" + fixed + "}");
			i = k;
		};
		return out.toString();
	}

	static function fixEnumJoinFirstArg(expr:String) {
		var start = 0;
		var out = expr;
		while (true) {
