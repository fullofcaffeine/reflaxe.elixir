			var comma = -1;
			var q = p;
			while (q < out.length && depth > 0) {
				var ch = out.charAt(q);
				if (ch == "(") {
					depth ++;
				} else {
					if (ch == ")") {
						depth --;
					} else {
						if (ch == "," && depth == 1) {
							comma = q;
							break;
						};
					};
				};
				q ++;
			};
			if (comma == -1) {
				break;
			};
			var arg1 = out.substr(p, comma - p);
			var needsWrap = (arg1.indexOf("\n", null) != -1) || (arg1.indexOf("=", null) != -1 && arg1.indexOf("==", null) == -1);
			if (needsWrap) {
