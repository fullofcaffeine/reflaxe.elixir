						};
					};
					case 62: {
						var ` = `[0];
						{
							var code = `;
							if (code != null && code.indexOf("#{", null) != -1) {
								var updated2 = reflaxe.elixir.ast.transformers.InterpolateIIFEWrapTransforms.wrapAll(code);
								if (updated2 != code) {
									{def : reflaxe.elixir.ast.ElixirASTDef.ERaw(updated2), metadata : n.metadata, pos : n.pos};
								} else {
									n;
