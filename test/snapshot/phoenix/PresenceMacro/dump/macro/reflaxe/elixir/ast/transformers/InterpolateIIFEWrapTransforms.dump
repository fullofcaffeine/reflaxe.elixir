	static function wrapAll(src:String) {
		var out = new StringBuf();
		var i = 0;
		while (i < src.length) {
			var open = src.indexOf("#{", i);
			if (open == -1) {
				out.add(src.substr(i, null));
				break;
			};
			out.add(src.substr(i, open - i));
			var k = open + 2;
			var depth = 1;
			while (k < src.length && depth > 0) {
				var ch = src.charAt(k);
				if (ch == "{") {
					depth ++;
				} else {
					if (ch == "}") {
						depth --;
					};
				};
				k ++;
			};
			var inner = src.substr(open + 2, (k - 1) - (open + 2));
			var trimmed = StringTools.trim(inner);
			var isIdent = new EReg("^[A-Za-z_][A-Za-z0-9_]*$", "");
			var isDotted = new EReg("^[A-Za-z_][A-Za-z0-9_]*(\\.[A-Za-z_][A-Za-z0-9_]*)*$", "");
			var trivial = isIdent.match(trimmed) || isDotted.match(trimmed);
			if (! trivial && ! StringTools.startsWith(trimmed, "(fn ->")) {
				inner = "(fn -> " + inner + " end).()";
			};
			out.add("#{" + inner + "}");
			i = k;
		};
		return out.toString();
	}
}