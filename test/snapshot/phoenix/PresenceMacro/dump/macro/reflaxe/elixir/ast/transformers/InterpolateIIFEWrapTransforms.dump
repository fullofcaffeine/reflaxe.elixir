class reflaxe.elixir.ast.transformers.InterpolateIIFEWrapTransforms {

	public static function pass(ast:reflaxe.elixir.ast.ElixirAST) {
		return reflaxe.elixir.ast.ElixirASTTransformer.transformNode(ast, function(n:reflaxe.elixir.ast.ElixirAST) {
			return @:ast(switch (n.def) {
	case EString(value) if (value != null && value.indexOf("#{") != -1):
		var updated = wrapAll(value);
		if (updated != value) makeASTWithMeta(EString(updated), n.metadata, n.pos) else n;	
	case ERaw(code) if (code != null && code.indexOf("#{") != -1):
		var updated2 = wrapAll(code);
		if (updated2 != code) makeASTWithMeta(ERaw(updated2), n.metadata, n.pos) else n;	
	default:
		n;	
}) {
				var ` = n.def;
				switch (enumIndex `) {
					case 32: {
						var ` = `[0];
						{
							var value = `;
							if (value != null && value.indexOf("#{", null) != -1) {
								var updated = reflaxe.elixir.ast.transformers.InterpolateIIFEWrapTransforms.wrapAll(value);
								if (updated != value) {
									{def : reflaxe.elixir.ast.ElixirASTDef.EString(updated), metadata : n.metadata, pos : n.pos};
								} else {
									n;
								};
							} else {
								n;
