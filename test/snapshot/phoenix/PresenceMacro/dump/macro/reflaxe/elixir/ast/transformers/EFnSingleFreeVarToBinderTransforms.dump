			return @:ast(switch (n.def) {
	case EFn(clauses):
		var out = [];
		for (cl  in  clauses) out.push(rewriteClause(cl));
		makeASTWithMeta(EFn(out), n.metadata, n.pos);	
	default:
		n;	
}) {
				var ` = n.def;
				if (enumIndex ` == 42) {
					var ` = `[0];
					{
						var clauses = `;
						{
							var out = [];
							{
								var ` = 0;
								while (` < clauses.length) {
									var cl = clauses[`];
									++ `;
									out.push(reflaxe.elixir.ast.transformers.EFnSingleFreeVarToBinderTransforms.rewriteClause(cl));
								};
							};
							{def : reflaxe.elixir.ast.ElixirASTDef.EFn(out), metadata : n.metadata, pos : n.pos};
						};
					};
				} else {
					n;
				};
			};
		});
	}

	static function rewriteClause(cl:{ guard : Null<reflaxe.elixir.ast.ElixirAST>, body : reflaxe.elixir.ast.ElixirAST, args : Array<reflaxe.elixir.ast.EPattern> }) {
		var binder = null;
		if (cl.args != null && cl.args.length == 1) {
			@:ast(switch (cl.args[0]) {
	case PVar(n):
		binder = n;	
	default:
}) {
				var ` = cl.args[0];
				if (enumIndex ` == 0) {
					var ` = `[0];
					{
						var n = `;
						{
							binder = n;
						};
					};
				} else {};
			};
		};
		if (binder == null) {
			return cl;
		};
		var referenced = reflaxe.elixir.ast.analyzers.VariableUsageCollector.referencedInFunctionScope(cl.body);
		var bound = reflaxe.elixir.ast.transformers.EFnSingleFreeVarToBinderTransforms.collectLocallyBoundNames(cl);
		referenced.remove(binder);
		for (k in bound.keys()) {
			referenced.remove(k);
		};
		var freeNames = [];
		for (k in referenced.keys()) {
			if (reflaxe.elixir.ast.transformers.EFnSingleFreeVarToBinderTransforms.looksLikeVar(k)) {
				freeNames.push(k);
			};
		};
		if (freeNames.length != 1) {
			return cl;
		};
		var victim = freeNames[0];
		Sys.println("[EFnSingleFreeVarToBinder] Rewriting free var " + victim + " -> " + binder);
		var newBody = reflaxe.elixir.ast.transformers.EFnSingleFreeVarToBinderTransforms.renameVarInNode(cl.body, victim, binder);
		return {args : cl.args, guard : cl.guard, body : newBody};
	}

	static function looksLikeVar(name:String) {
		if (name == null || name.length == 0) {
			return false;
		};
		var c = name.charAt(0);
		if (c == "_" || c.toLowerCase() != c) {
			return false;
		};
		return name.indexOf(".", null) == -1;
	}

