		var visit = [null];
		visit[0] = function(pp:reflaxe.elixir.ast.EPattern) {
			@:ast(switch (pp) {
	case PVar(n):
		add(n);	
	case PAlias(n, pat):
		add(n);
		visit(pat);	
	case PTuple(es):
		for (e  in  es) visit(e);	
	case PList(es):
		for (e  in  es) visit(e);	
	case PCons(h, t):
		visit(h);
		visit(t);	
	case PMap(kvs):
		for (kv  in  kvs) visit(kv.value);	
	case PStruct(_, fs):
		for (f  in  fs) visit(f.value);	
	case PBinary(segs):
		for (s  in  segs) visit(s.pattern);	
