	static function toQuoted(s:String) {
		var t = StringTools.trim(s);
		if ((StringTools.startsWith(t, "\"") && StringTools.endsWith(t, "\"")) || (StringTools.startsWith(t, "'") && StringTools.endsWith(t, "'"))) {
