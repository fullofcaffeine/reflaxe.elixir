	static function rewrite(s:String) {
		var out = new StringBuf();
		var i = 0;
		while (i < s.length) {
			var open = s.indexOf("<%=", i);
			if (open == -1) {
				out.add(s.substr(i, null));
				break;
			};
			out.add(s.substr(i, open - i));
			var close = s.indexOf("%>", open + 3);
			if (close == -1) {
				out.add(s.substr(open, null));
				break;
			};
			var inner = StringTools.trim(s.substr(open + 3, close - (open + 3)));
			if (StringTools.startsWith(inner, "if ") && inner.indexOf(" do", null) != -1) {
				var cond = StringTools.trim(inner.substr(3, inner.indexOf(" do", null) - 3));
				var thenStart = close + 2;
				var elseTag = s.indexOf("<% else %>", thenStart);
				var endTag = s.indexOf("<% end %>", thenStart);
				if (endTag == -1) {
					out.add(s.substr(open, (close + 2) - open));
					i = close + 2;
					continue;
				};
				var thenEnd = if ((elseTag != -1 && elseTag < endTag)) {
