				var branchesArePlainText = (thenHtml.indexOf("<", null) == -1 && (elseHtml == null || elseHtml.indexOf("<", null) == -1));
				if (thenHtml.indexOf("<%", null) == -1 && (elseHtml == null || elseHtml.indexOf("<%", null) == -1) && branchesArePlainText) {
					out.add("<%= if " + cond + ", do: " + reflaxe.elixir.ast.transformers.HeexBlockIfToInlineTransforms.toQuoted(thenHtml) + ", else: " + reflaxe.elixir.ast.transformers.HeexBlockIfToInlineTransforms.toQuoted(elseHtml) + " %>");
					i = endTag + 9;
