{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Haxe Interpreter",
      "type": "haxe-eval",
      "request": "launch"
    },
    {
      "name": "Eval: Snapshot Test (choose)",
      "type": "haxe-eval",
      "request": "launch",
      "cwd": "${workspaceFolder}/test/tests/${input:snapshotName}",
      "args": [
        "compile.hxml"
      ],
      "presentation": {
        "group": "Snapshots"
      }
    },
    {
      "name": "Eval: Integration Tests (interp)",
      "type": "haxe-eval",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "args": [
        "test/integration/CompilationPipelineTest.hxml",
        "--interp"
      ]
    },
    {
      "name": "Eval: Performance Benchmarks (interp)",
      "type": "haxe-eval",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "args": [
        "test/performance/PerformanceBenchmarks.hxml",
        "--interp"
      ]
    },
    {
      "name": "Eval: DevEnv (compiler + macros)",
      "type": "haxe-eval",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "args": [
        "DevEnv.hxml"
      ]
    },
    {
      "name": "Eval: Macro-Time Compiler Tests",
      "type": "haxe-eval",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "args": [
        "MacroTimeTest.hxml"
      ]
    },
    {
      "name": "Eval: HaxeUnit (runtime tests)",
      "type": "haxe-eval",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "args": [
        "TestHaxeUnit.hxml"
      ]
    }
  ],
  "inputs": [
    {
      "id": "snapshotName",
      "type": "promptString",
      "description": "Enter snapshot test folder name under test/tests (e.g. liveview_basic)",
      "default": "liveview_basic"
    }
  ]
}
