                var pattern = PVar(toElixirVarName(v.name));
                var expr = buildFromTypedExpr(e1);
                var body = buildFromTypedExpr(e2);
                
                EFor([{pattern: pattern, expr: expr}], [], body, null, false);
                
            case TWhile(econd, e, normalWhile):
